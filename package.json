{
  "name": "agentboard",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"bun run dev:server\" \"bun run dev:client\"",
    "dev:server": "bun --watch src/server/index.ts",
    "dev:client": "vite",
    "build": "vite build",
    "start": "bun src/server/index.ts",
    "lint": "oxlint .",
    "typecheck": "tsc --noEmit",
    "test": "bun test src/server/__tests__",
    "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-reporter=text src/server/__tests__",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "prepare": "git config core.hooksPath .githooks"
  },
  "dependencies": {
    "@xterm/addon-clipboard": "^0.2.0",
    "hono": "^4.6.10",
    "node-pty": "^1.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "xterm-addon-webgl": "^0.16.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "bun-types": "^1.3.5",
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "oxlint": "^1.38.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.7.2",
    "vite": "^5.4.11"
  }
}
